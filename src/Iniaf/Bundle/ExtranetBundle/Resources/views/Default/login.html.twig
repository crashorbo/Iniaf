{% extends '::frontend.html.twig' %}

{% block navprin %}
    <li><a href="{{ path('frontend_home') }}">Inicio</a></li>
    <li><a href="#">Informacion</a></li>
    <li><a href="">Contacto</a></li>
    <li class="active"><a href="{{ path('extranet_home') }}">Ingreso</a></li>
{% endblock %}

{% block contenido %}
    <div class="container ">
        <div class="col-md-12 background-fix">
            <form class="form-signin" action="{{ path('extranet_login_check') }}" method="post">
                <h3 class="form-signin-heading">Ingreso al Sistema</h3>
                {% if error %}
                    <div>{{ error.message }}</div>
                {% endif %}
                <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }} " required="required" placeholder="Usuario" />
                <input type="password" class="form-control" id="password" name="_password" required="required" placeholder="ContraseÃ±a" />

                {#
                    If you want to control the URL the user
                    is redirected to on success (more details below)
                    <input type="hidden" name="_target_path" value="/account" />
                #}

                <button class="btn btn-large btn-primary" type="submit">Ingresar</button>
            </form>
        </div>
    </div>
{% endblock %}